#include<stdio.h>
#include<conio.h>
main()
{
	int a[30],i,n,min,max,loc;
	printf("enter the size of the array\n");
	scanf("%d",&n);
	printf("enter elements into arrays");
   for(i=0;i<=n-1;i++)
	{
		scanf("%d",&a[i]);
	}
	 max=a[0];
	 loc=0;
	 for(i=1;i<=n-1;i++)
	 {
	 	if(a[i]>max)
	 	{
	 		max=a[i];
	 		loc=i;
		 }
	 }
	
	printf("the max element is %d loactaed at %d position\n",max,loc);
	min=a[0];
	loc=0;
	for(i=1;i<=n-1;i++)
	{
	 	if(a[i]<min)
	 	{
	 		min=a[i];
	 		loc=i;
		 }
	 }
	printf("the min element is %d loactaed at %d position\n",min,loc);
	
	
	
}
